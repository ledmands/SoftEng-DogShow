<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAdminBack"
        android:layout_width="82dp"
        android:layout_height="115dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdminEditDogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="edit dogs"
        app:layout_constraintStart_toEndOf="@+id/btnAdminBack"
        app:layout_constraintTop_toTopOf="@+id/btnAdminBack" />

    <Button
        android:id="@+id/btnAdminEditTrainers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="edit trainers"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAdminEditDogs"
        app:layout_constraintStart_toEndOf="@+id/btnAdminEditDogs" />

    <Button
        android:id="@+id/btnEditSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="edit schedule"
        app:layout_constraintStart_toEndOf="@+id/btnAdminBack"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminEditDogs" />
</androidx.constraintlayout.widget.ConstraintLayout>