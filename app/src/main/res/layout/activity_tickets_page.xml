<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketsPage">

    <EditText
        android:id="@+id/etTicketsName"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Name on card"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etTicketsCC"
        app:layout_constraintTop_toBottomOf="@+id/etTicketsCC" />

    <EditText
        android:id="@+id/etTicketsNum"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Number of Tickets"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTicketsBack" />

    <EditText
        android:id="@+id/etTicketsCC"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Credit Card"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etTicketsNum"
        app:layout_constraintTop_toBottomOf="@+id/etTicketsNum" />

    <Button
        android:id="@+id/btnTicketsSubmit"
        android:layout_width="195dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:text="submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTicketsEmail" />

    <Button
        android:id="@+id/btnTicketsBack"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTicketsEmail"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Contact Email"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etTicketsName"
        app:layout_constraintTop_toBottomOf="@+id/etTicketsName" />

</androidx.constraintlayout.widget.ConstraintLayout>