<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:padding="5dp">

    <TextView
        android:id="@+id/listItemTrainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/listLabelTrainerName"
        app:layout_constraintStart_toStartOf="@+id/listItemTrainerCountry" />

    <TextView
        android:id="@+id/listItemTrainerCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/listLabelTrainerCountry"
        app:layout_constraintStart_toEndOf="@+id/listLabelTrainerCountry" />

    <TextView
        android:id="@+id/listItemTrainerClub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/listLabelTrainerClub"
        app:layout_constraintStart_toStartOf="@+id/listItemTrainerCountry" />

    <TextView
        android:id="@+id/listLabelTrainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listLabelTrainerCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Country: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/listLabelTrainerName"
        app:layout_constraintTop_toBottomOf="@+id/listLabelTrainerName" />

    <TextView
        android:id="@+id/listLabelTrainerClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Club:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/listLabelTrainerCountry"
        app:layout_constraintTop_toBottomOf="@+id/listLabelTrainerCountry" />

    <!--<TextView
        android:id="@+id/listItemTrainerExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="years exp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/listItemTrainerClub"
        app:layout_constraintTop_toBottomOf="@+id/listItemTrainerClub" />-->


</androidx.constraintlayout.widget.ConstraintLayout>